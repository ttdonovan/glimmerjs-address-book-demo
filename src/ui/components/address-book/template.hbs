<div class="container-fluid">
  <h1>Address Book</h1>

  <div class="row">
    <div class="col-4">
      <div class="list-group">
        {{#each contacts key="@index" as |contact|}}
          <button class="list-group-item list-group-item-action"
                  onclick={{action onSelect contact}}>
            {{contact.fullName}}
          </button>
        {{/each}}
      </div>
    </div>
    <div class="col-8">
      <contact-panel @contact={{selectedContact}}
                     @onNew={{action newContact }}
                     @onCommit={{action commitContact }} />
    </div>
  </div>
</div>
